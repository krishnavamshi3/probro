<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:padding="@dimen/space_8dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="false"
            android:layout_toStartOf="@+id/ct_imgae"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ct_article_name"
                style="@style/AppTextNormalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/ct_article_extra_info"
                style="@style/AppTextNormalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="size: M, color: blue"
                android:layout_gravity="center"
                android:textSize="@dimen/small_font_size" />

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cart_pay_price_tv"
                    style="@style/AppTextHighlightStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 999" />

                <TextView
                    android:id="@+id/cart_mrp_price_tv"
                    style="@style/AppTextDiminishStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/strike_through"
                    android:text="Rs. 4999" />

                <TextView
                    android:id="@+id/cart_discount_tv"
                    style="@style/AppTextHighlightStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="(60% OFF)" />

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/ct_imgae"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_launcher_foreground" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>