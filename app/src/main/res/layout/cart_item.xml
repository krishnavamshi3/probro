<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:padding="@dimen/space_8dp">

    <ImageView
        android:id="@+id/soldout_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/qty_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include"
        app:srcCompat="@drawable/soldout" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="false"
            android:layout_toStartOf="@+id/ct_imgae"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ct_article_name"
                style="@style/AppTextNormalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="TextView" />

            <TextView
                android:id="@+id/ct_article_extra_info"
                style="@style/AppTextNormalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="size: M, color: blue"
                android:layout_gravity="center"
                android:textSize="@dimen/small_font_size" />

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cart_pay_price_tv"
                    style="@style/AppTextHighlightStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 999" />

                <TextView
                    android:id="@+id/cart_mrp_price_tv"
                    style="@style/AppTextDiminishStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/strike_through"
                    android:text="Rs. 4999" />

                <TextView
                    android:id="@+id/cart_discount_tv"
                    style="@style/AppTextHighlightStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="(60% OFF)" />

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/ct_imgae"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_launcher_foreground" />
    </RelativeLayout>



    <include layout="@layout/empty_space_16dp" />

    <RelativeLayout
        android:id="@+id/qty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout3"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout3"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

        <TextView
            style="@style/AppTextDiminishStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/qty" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cart_btn_qty_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/fui_transparent"
                android:src="@drawable/ic_baseline_remove_black" />

            <TextView
                android:id="@+id/cart_quantity_tv"
                style="@style/AppTextHighlightStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8dp"
                android:layout_marginEnd="@dimen/space_8dp"
                android:text="1" />

            <ImageButton
                android:id="@+id/cart_btn_qty_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/fui_transparent"
                android:src="@drawable/ic_outline_add_black" />
        </LinearLayout>


    </RelativeLayout>

    <include
        android:id="@+id/chip1"
        layout="@layout/line_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="@+id/qty_layout"
        app:layout_constraintStart_toStartOf="@+id/qty_layout"
        app:layout_constraintTop_toBottomOf="@+id/qty_layout" />
    <LinearLayout
        android:id="@+id/remove_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/chip1"
        app:layout_constraintStart_toStartOf="@+id/chip1"
        app:layout_constraintTop_toBottomOf="@+id/chip1">

        <TextView
            android:id="@+id/cart_save_for_later"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/space_8dp"
            android:text="@string/save_for_later"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_outline_add_black" />
        <!--        <View android:layout_width="1dp"-->
        <!--            android:layout_height="24dp"-->
        <!--            android:layout_marginTop="@dimen/space_8dp"-->
        <!--            android:background="@color/line_separator"-->
        <!--            xmlns:android="http://schemas.android.com/apk/res/android" />-->
        <TextView
            android:id="@+id/cart_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/space_8dp"
            android:text="@string/remove"
            app:drawableStartCompat="@drawable/ic_outline_delete_black" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>